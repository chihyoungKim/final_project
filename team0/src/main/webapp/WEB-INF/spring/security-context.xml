<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<bean class="com.inadang.security.CustomUserDetailsService" id="userDetailsService"/>

	<security:http>
		<security:form-login login-page="/member/login" />
		<security:logout logout-url="/logout" logout-success-url="/"/>
		<security:csrf disabled="true"/>
		<security:intercept-url pattern="/sample/all" access="permitAll"/> 
		<security:intercept-url pattern="/sample/member" access="hasAnyRole('ROLE_MEMBER, ROLE_MANAGER')"/> 
		<security:intercept-url pattern="/sample/admin" access="hasRole('ROLE_ADMIN')"/>
		<!-- <security:intercept-url pattern="/store/detail/*" access="hasAnyRole('ROLE_MEMBER, ROLE_MANAGER', 'ROLE_ADMIN')"/> 
		<security:intercept-url pattern="/store/like/*" access="hasAnyRole('ROLE_MEMBER, ROLE_MANAGER', 'ROLE_ADMIN')"/> 
		<security:intercept-url pattern="/member/like/*" access="hasAnyRole('ROLE_MEMBER, ROLE_MANAGER', 'ROLE_ADMIN')"/> 
		<security:intercept-url pattern="/member/orderHistory/*" access="hasAnyRole('ROLE_MEMBER, ROLE_MANAGER', 'ROLE_ADMIN')"/> 
		<security:intercept-url pattern="/store/menu/*" access="hasAnyRole('ROLE_MEMBER, ROLE_MANAGER', 'ROLE_ADMIN')"/> 
		<security:intercept-url pattern="/store/reply/*" access="hasAnyRole('ROLE_MEMBER, ROLE_MANAGER', 'ROLE_ADMIN')"/> 
		<security:intercept-url pattern="/reviews/register" access="hasAnyRole('ROLE_MEMBER, ROLE_MANAGER', 'ROLE_ADMIN')"/> -->
		<!-- <security:remember-me data-source-ref="dataSource"/> -->
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="userDetailsService">
			<security:password-encoder ref="passwordEncoder"/>
		</security:authentication-provider>	
	</security:authentication-manager>
</beans>
